{
  "name": "appointment_management",
  "version": "1.0.0",
  "description": "Appointment Management is a WordPress plugin that allows you to efficiently manage appointments for your website. With this plugin, you can easily handle reservations, appointments, and scheduling for various services or events. Streamline your appointment process and provide a seamless experience for your users.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:js": "webpack --mode=production --config webpack.config.js",
    "build:css:frontend": "tailwindcss build frontend/css/tailwind.css -o dist/frontend.styles.css",
    "build:css:backend": "tailwindcss build admin/css/tailwind.css -o dist/backend.styles.css",
    "build:css": "npm run build:css:frontend && npm run build:css:backend",
    "build": "npm run build:js && npm run build:css",
    "watch": "concurrently \"npm:build:* -- --watch\""
  },
